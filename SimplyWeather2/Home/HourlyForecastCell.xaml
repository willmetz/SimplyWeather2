<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="SimplyWeather2.Home.HourlyForecastCell"
       HeightRequest="50"
       HasShadow="True"
       BackgroundColor="Blue">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Text="{Binding TimeOfDay}" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center" TextColor="White"/>
        <Label Text="{Binding Temperature}" Grid.Column="1" VerticalOptions="Center" TextColor="White"/>
        <Label Text="{Binding ImageUrl}" Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" TextColor="White"/>
    </Grid>
</Frame>
